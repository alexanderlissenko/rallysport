#version 420
/*
Implemented whith http://www.codinglabs.net/tutorial_simple_def_rendering.aspx 
Marco Alamia as reference.
*/
in vec4 position;
in vec3 normals;
in mat4 TBN;
uniform sampler2D textureDiffuse;
out diffuseOut;
out positionOut;
out normalOut;

void main(){
	diffuseOut = vec4(texture2D(textureDiffuse,gl_TexCoord[0].st).rgb, 0);
	positionOut = vec4(position.xyz,0);
	normalOut = vec4(normals.xyz,0);
}