#version 420

precision mediump float;
uniform mat4 projectionMatrix;
uniform mat4 modelMatrix;
uniform mat4 viewMatrix;

in vec3 normalIn;
in vec2 texCoordIn;
in vec3 positionIn;
//in float intensity; // sun light
//in float ambientLight;

out vec3 fragmentNormal;
out vec2 fragmentTexCoord;
out float extIntensity;
out float extAmbientLight;
out vec4 positionOut;

void main(void)
{
   fragmentTexCoord = texCoordIn;
   fragmentNormal = normalize((modelMatrix*vec4(normalIn, 0.0)).xyz);
   gl_Position = projectionMatrix * viewMatrix * modelMatrix * vec4(positionIn,1);
   //positionOut = modelMatrix * vec4(positionIn,1); // Copy position to the fragmentshader
  
}